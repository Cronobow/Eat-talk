<div class="row mt-5">
  <div class="col-auto mr-auto">
    <h1>分類列表</h1>
  </div>
  <div class="col-auto">
    <%= link_to 'Restaurant', dark_restaurants_path %> |
    <%= link_to 'Categories', dark_categories_path %>
  </div>
  <div>
    <%= form_for [:dark, @category] do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
      <%= f.submit class: "btn btn-success" %>
    </div>
    <% end %>
  </div>
</div>
<div class="row mt-5">
  <div class="col-md-12">
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>NO #</th>
          <th>Category Name</th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <th scope="row"><%= category.id %></th>
          <td><%= category.name %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
