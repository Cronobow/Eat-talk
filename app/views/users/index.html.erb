<div class="container">
  <div class="row mt-5">
    <h1>追蹤美食達人</h1>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col">
      <% @users.each do |user| %>
        <div class="my-restaurant">
          <% if user.avatar? %>
            <%= image_tag user.avatar, width: '100px', class: "img-thumbnail mx-auto d-block" %>
          <% else %>
            <img src="data:image/svg+xml;base64," width="100" height="100" class="img-thumbnail mx-auto d-block" >
          <% end %>
          <p><%= user.name %></p>
          <%= link_to "Follow", followships_path(following_id: user), method: :post, class: "btn btn-success"  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
