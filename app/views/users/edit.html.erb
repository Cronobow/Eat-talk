<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <%= form_for(@user) do |f| %>
        <div class="form-group">
          <%= f.label :avatar, "Your Photo" %>
          <%= image_tag @user.avatar, width: '100px' ,class: "img-thumbnail mb-2" if @user.avatar? %>
          <%= f.file_field :avatar, class: "form-control-file"  %>
        </div>
        <div class="form-group">
          <%= f.label :name, "Name" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :intro, "Intro" %>
          <%= f.text_area :intro, class: "form-control" %>
        </div>
        <%= f.submit class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
