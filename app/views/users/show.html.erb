<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-4">
      <%= link_to edit_user_path(@user) do%>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width: '300px', class: "img-thumbnail mx-auto d-block" %>
        <% else %>
          <img src="data:image/svg+xml;base64," width="300" height="300" class="img-thumbnail mx-auto d-block" >
        <% end %>
      <% end %>
    </div>
    <div class="col-md-4 mt-5">
      <h3><%= @user.name %></h3>
      <p>Email: <%= @user.email %></p>
      <p>Intro: <%= @user.intro %></p>
      <p><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary"  %></p>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-md-12 mt-5">
      <h2>已經評論過餐廳</h2>
      <div>
        <% @commented_restaurants.each do |restaurant| %>
        <ul>
          <li>
            <%= link_to restaurant.name, restaurant_path(restaurant) %>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
