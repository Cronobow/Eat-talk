<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-4">
      <%= link_to edit_user_path(@user) do%>
        <% if @user.avatar? %>
          <%= image_tag @user.avatar, width: '300px', class: "img-thumbnail mx-auto d-block" %>
        <% else %>
          <img src="data:image/svg+xml;base64," width="300" height="300" class="img-thumbnail mx-auto d-block" >
        <% end %>
      <% end %>
    </div>
    <div class="col-md-4 mt-5">
      <h3><%= @user.name %></h3>
      <p>Email: <%= @user.email %></p>
      <p>Intro: <%= @user.intro %></p>
      <p><%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-primary" if @user == current_user %></p>
    </div>
  </div>
  <div class="row justify-content-center mt-5">
    <div class="col-md-12 mt-5">
      <div class="card">
        <div class="card-header">
          <h4><%= @commented_restaurants.count %> 間已經評論過的餐廳</h4>
        </div>
        <div class="card-body">
          <% @commented_restaurants.each do |restaurant| %>
            <div class="my-restaurant">
              <% if restaurant.image? %>
                <%= image_tag restaurant.image %>
              <% else %>
                <img class="card-img" src="https://loremflickr.com/<%= rand(140..180)%>/<%= rand(100..120)%>/dinner/?random=<%= rand(1..30)%>">
              <% end %>
              <p><%= link_to restaurant.name, restaurant_path(restaurant) %></p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
